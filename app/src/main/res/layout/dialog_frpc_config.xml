<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Server Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frpc_server_settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="16dp" />

        <!-- Server Address -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/frpc_server_addr"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/serverAddrEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Server Port -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/frpc_server_port"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/serverPortEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="7000"
                android:maxLength="5" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Auth Token -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/frpc_auth_token"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:endIconMode="password_toggle"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/authTokenEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- TLS Enable -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/tlsEnableSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frpc_tls_enable"
            android:checked="true"
            android:layout_marginBottom="24dp" />

        <!-- Proxy Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frpc_proxy_settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="16dp" />

        <!-- Proxy Type -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/frpc_proxy_type"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_marginBottom="12dp">

            <AutoCompleteTextView
                android:id="@+id/proxyTypeDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="STCP (安全TCP)" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Proxy Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/frpc_proxy_name"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/proxyNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="CellularRouter"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Secret Key -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/frpc_secret_key"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:endIconMode="password_toggle"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/secretKeyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Use Compression -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/useCompressionSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frpc_use_compression"
            android:checked="true"
            android:layout_marginBottom="8dp" />

        <!-- Use Encryption -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/useEncryptionSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frpc_use_encryption"
            android:checked="true"
            android:layout_marginBottom="24dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
